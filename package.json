{
  "name": "buddy-harmony",
  "version": "0.0.6",
  "homepage": "https://Marthijs-Berfelo.github.io/buddy-harmony",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet",
    "format": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "release": "release-it",
    "release:ci": "npm run release --minor --ci",
    "release:ci-prepare": "echo $(release-it --ci --minor --release-version) > next-version.txt",
    "predeploy": "npm run build -- PUBLIC_URL=https://Marthijs-Berfelo.github.io/buddy-harmony",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@material-tailwind/react": "^1.0.3",
    "@tombatossals/chords-db": "^0.5.1",
    "assert-ts": "^0.3.4",
    "fretboard-api": "^0.7.1",
    "guitar-scales": "^1.0.4",
    "i18next": "^21.8.10",
    "i18next-browser-languagedetector": "^6.1.4",
    "i18next-http-backend": "^1.4.1",
    "immer": "^9.0.14",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-flags-select": "^2.2.3",
    "react-i18next": "^11.17.2",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "react-to-print": "^2.14.7",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@types/react-fontawesome": "^1.6.5",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^4.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jest-junit": "^13.2.0",
    "msw": "^0.42.1",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "release-it": "^15.0.0",
    "tailwindcss": "^3.1.2",
    "typescript": "^4.7.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "warn"
      ]
    }
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "outputDirectory": "./test-results",
    "outputName": "TEST-junit.xml"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "release-it": {
    "git": {
      "requiresBranch": "release/**",
      "commitMessage": "Release: v${version}",
      "requireUpstream": false
    },
    "github": {
      "release": true
    }
  }
}
